<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Success Page</title>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Dragonfly\BootstrapCheckout\Block\OrderSuccess"
                   cacheable="false"
                   name="bootstrapcheckout.order.success"
                   template="Dragonfly_BootstrapCheckout::order_success.phtml"/>
        </referenceContainer>
        <referenceBlock name="checkout.registration" remove="true"/>
        <referenceBlock name="authentication-popup" remove="true"/>
    </body>
</page>
